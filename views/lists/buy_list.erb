<div class="grid-x grid-margin-x">
  <h4>Оплата списка покупок</h4>
</div>

<% form({ method: :post },{ obj: @parameters }) do |f| %>
  <div class="grid-x grid-margin-x">
    <div class="large-12 cell">
      <%= f.input(:name, type: :text, label: 'Введите имя файла в который записать список', placeholder: 'Мой список покупок')%>
    </div>
    <div class="large-12 cell">
      <%= f.button(value: "Записать в файл", class: "button") %>
      <a class="button secondary" href="<%=  path(@list) %>">Отмена</a>
    </div>
  </div>
<% end %>