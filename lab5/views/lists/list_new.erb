<div class="grid-x grid-margin-x">
  <h3>Добавление списка покупок</h3>
</div>

<% form({ method: :post },{ obj: @parameters }) do |f| %>
  <div class="grid-x grid-margin-x">
    <div class="large-12 cell">
      <%= f.input(:name, type: :text, label: 'Название списка покупок', placeholder: 'Список 1')%>
    </div>
    <div class="large-12 cell">
          <%= f.button(value: "Добавить", class: "button success") %>
          <a class="button" href="<%=  lists_path %>">К списку книг</a>
    </div>
    </div>
<% end %>