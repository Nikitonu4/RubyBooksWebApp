<div class="grid-x grid-margin-x">
  <div class="cell large-12">
    <h4>Удаление списка покупок</h4>
  </div>
</div>

<div class="grid-x grid-margin-x">
  <div class="cell large-12 warning">
    Вы действительно хотите удалить этот список покупок: <%= @list.name %>?
  </div>
</div>

<% form({ method: :post },{ obj: @parameters }) do |f| %>
  <div class="grid-x grid-margin-x">
    <div class="large-12 cell">
      <%= f.input(:confirmation, type: :checkbox, label: 'Подтвержаю удаление') %>
    </div>
    <div class="large-12 cell">
      <%= f.button(value: 'Удалить', class: 'alert button') %>
      <a href="<%= lists_path %>" class="button secondary">Отмена</a>
    </div>
  </div>
<% end %>
